<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/linearback">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="8dp"
                    app:cardElevation="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#C8C7C7"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:clickable="true"
                        android:id="@+id/userprec"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/balance" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#353535"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="8dp"
                    app:cardElevation="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#C8C7C7"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/urepor"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/endurance" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Endurance"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#353535"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="8dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="#C8C7C7"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/docprof"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/weightlift"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Weight Lift"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#353535"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="8dp"
                    app:cardElevation="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#C8C7C7"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/um_profile"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/flexibility" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="yoga"
                            android:textColor="#353535"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>