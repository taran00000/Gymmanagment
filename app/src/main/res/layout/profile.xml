<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:background="@drawable/linearback"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Profile"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#666565"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold"
                android:textColor="#666565"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:textColor="#7C7B7B"
                android:text="adam"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/p_uname"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User ID"
                android:textStyle="bold"
                android:textColor="#666565"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="#7C7B7B"
                android:text="useradam"
                android:textSize="16dp"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/p_cont"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="#666565"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:text="adam@gmail.com"
                android:textColor="#7C7B7B"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/p_email"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textStyle="bold"
                android:textColor="#666565"
                android:textSize="18dp"/>
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:textColor="#7C7B7B"
                android:text="1356258943"
                android:layout_height="wrap_content"
                android:id="@+id/p_dob"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="20dp">
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Update"
            android:id="@+id/p_update"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/newbuttonshape"
            android:textColor="#FFFF"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="logout"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/p_lohu"
            android:background="@drawable/newbuttonshape"
            android:textColor="#FFFF"/>
    </LinearLayout>

</LinearLayout>