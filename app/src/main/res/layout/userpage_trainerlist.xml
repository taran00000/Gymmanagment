                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                android:text="CARDS"
                                android:drawablePadding="4dp"
                                android:textStyle="bold"
                                android:drawableLeft="@drawable/ic_baseline_photo_album_24"
